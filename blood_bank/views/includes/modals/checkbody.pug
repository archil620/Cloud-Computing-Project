                  label.custom-control-label(for='moreglom') >59                  
                .custom-control.custom-radio.custom-control-inline
                  input#lessglom.custom-control-input(type='radio', name='glom', value="1")
                  label.custom-control-label(for='lessglom', style='color: blue; margin-left: 10px') (mL/min/1.73)
            +form-row('african', 'text', 'glom', 'african')
