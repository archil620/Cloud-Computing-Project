// Donate Modal
mixin form-row(name, type, label, id)
  .form-group.row    
    if block 
      block
    else
      label.col-sm-2.col-form-label(for=id)= label+':'
      .col-sm-10
        input.form-control(id=id, placeholder=label, name=name, type=type, required)

#checkbodyModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='checkbodyModalLabel', aria-hidden='true')
  .modal-dialog.modal-lg(role='document')
    .modal-content
      form#donate(method='POST', action='/to/checkbody')
        .modal-header
          h5#exampleModalLabel.modal-title Please fill out the followings for checking your body!
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
        .modal-body
          .container-fluid
            input#appId(type='hidden', name="appId")
            +form-row('glucose', 'range', '', 'glucose')
              label.col-sm-6.col-form-label(for='glucose') GLUCOSE, SERUM
              .col-sm-5.offset-sm-1
                input(type="range", name="glucose", min="65" max="99") 
                output(for="glucose" onforminput="value = glucose.valueAsNumber;")
                span(style='margin-left: 10px; color: blue') (mg/dL)
            +form-row('bun', 'range', 'bun', 'bun')
              label.col-sm-6.col-form-label(for='bun') BUN
              .col-sm-5.offset-sm-1
                input(type="range", name="bun", min="5" max="26") 
                output(for="bun" onforminput="value = bun.valueAsNumber;")
                span(style='margin-left: 10px; color: blue') (mg/dL)
            +form-row('creatinine', 'range', '', 'creatinine')
              label.col-sm-6.col-form-label(for='creatinine') CREATININE, SERUM
              .col-sm-5.offset-sm-1
